{
  "name": "vdg-backend",
  "version": "0.0.0",
  "description": "backend service for van der gang  order app",
  "author": "Wiersma-ict",
  "license": "ISC",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "start:prod": "yarn run build && pm2 start dist/server.js --attach --name=van-der-gang-watches-backend --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "DEBUG=* npm run build && pm2 start ecosystem.config.js --only van-der-gang-watches-backend",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/connect-redis": "^0.0.19",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express-session": "^1.17.5",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/multer": "^1.4.7",
    "@types/redis": "^4.0.11",
    "body-parser": "^1.20.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-validator-jsonschema": "^3.1.1",
    "compression": "^1.7.4",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "ioredis": "^5.2.4",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.2",
    "prettier": "^2.8.1",
    "redis": "^4.5.1",
    "routing-controllers": "^0.10.0",
    "routing-controllers-openapi": "^3.1.0",
    "swagger-ui-express": "^4.6.0",
    "swc": "^1.0.11",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.15",
    "@types/hpp": "^0.2.2",
    "@types/morgan": "^1.9.3",
    "jslint": "^0.12.1"
  }
}
