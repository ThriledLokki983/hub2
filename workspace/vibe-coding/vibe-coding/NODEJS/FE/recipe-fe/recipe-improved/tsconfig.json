{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "configs/*": ["configs/*"],
      "contexts/*": ["contexts/*"],
      "data/*": ["data/*"],
      "helpers/*": ["helpers/*"],
      "hooks/*": ["hooks/*"],
      "hocs/*": ["hocs/*"],
      "pages/*": ["pages/*"],
      "styles/*": ["styles/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
