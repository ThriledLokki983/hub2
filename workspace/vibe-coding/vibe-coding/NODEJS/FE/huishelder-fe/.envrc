# .envrc file for the Huishelder Frontend project
# This file is used by direnv to automatically set environment variables

# Application name
export APP_NAME="huishelder-fe"

# Development settings
export NODE_ENV=${NODE_ENV:-development}
export APP_PORT=${APP_PORT:-3000}
export DOCKER_HOST_PORT=${DOCKER_HOST_PORT:-3000}

# Vite specific variables
export VITE_APP_TITLE="Huishelder Frontend"
export VITE_API_BASE_URL=${VITE_API_BASE_URL:-"http://localhost:8080"}

# Docker settings
export DOCKER_PLATFORM=${DOCKER_PLATFORM:-"linux/amd64"}

# Load environment-specific variables if available
if [ -f ".env.${NODE_ENV}" ]; then
  dotenv .env.${NODE_ENV}
fi

# Allow yarn to use local node_modules/.bin
PATH_add node_modules/.bin

# Display project information
echo "üíª ${VITE_APP_TITLE} environment loaded"
echo "üìÇ App: ${APP_NAME}"
echo "üåê Environment: ${NODE_ENV}"
echo "üîå Port: ${APP_PORT}"